local OrionLib = {}

-- Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- Variablen
local Player = Players.LocalPlayer

OrionLib.Theme = {
    Background = Color3.fromRGB(20, 20, 30),
    Secondary = Color3.fromRGB(30, 30, 45),
    Tertiary = Color3.fromRGB(40, 40, 60),
    Accent = Color3.fromRGB(255, 50, 150),
    Text = Color3.fromRGB(255, 255, 255),
    TextSecondary = Color3.fromRGB(180, 180, 200),
    Border = Color3.fromRGB(60, 60, 80)
}

OrionLib.Flags = {}

-- ScreenGui erstellen
local Orion = Instance.new("ScreenGui")
Orion.Name = "OrionLib"
Orion.ResetOnSpawn = false
Orion.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

if syn and syn.protect_gui then
    syn.protect_gui(Orion)
    Orion.Parent = game.CoreGui
elseif gethui then
    Orion.Parent = gethui()
else
    Orion.Parent = game.CoreGui
end

-- Hilfsfunktionen
local function Create(class, props)
    local obj = Instance.new(class)
    for prop, val in pairs(props) do
        if prop ~= "Parent" then
            obj[prop] = val
        end
    end
    if props.Parent then
        obj.Parent = props.Parent
    end
    return obj
end

-- Main Window Funktion
function OrionLib:MakeWindow(config)
    config = config or {}
    config.Name = config.Name or "Orion Lib"
    
    -- Main Window
    local MainWindow = Create("Frame", {
        Parent = Orion,
        BackgroundColor3 = OrionLib.Theme.Background,
        BorderSizePixel = 0,
        Position = UDim2.new(0.5, -300, 0.5, -200),
        Size = UDim2.new(0, 600, 0, 400),
        ClipsDescendants = true
    })
    
    Create("UICorner", {
        Parent = MainWindow,
        CornerRadius = UDim.new(0, 8)
    })
    
    Create("UIStroke", {
        Parent = MainWindow,
        Color = OrionLib.Theme.Accent,
        Thickness = 2
    })
    
    -- Top Bar
    local TopBar = Create("Frame", {
        Parent = MainWindow,
        BackgroundColor3 = OrionLib.Theme.Secondary,
        BorderSizePixel = 0,
        Size = UDim2.new(1, 0, 0, 40)
    })
    
    local Title = Create("TextLabel", {
        Parent = TopBar,
        Text = config.Name,
        TextColor3 = OrionLib.Theme.Text,
        TextSize = 18,
        Font = Enum.Font.GothamBold,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 15, 0, 0),
        Size = UDim2.new(0.5, 0, 1, 0),
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    -- Close Button
    local CloseButton = Create("TextButton", {
        Parent = TopBar,
        Text = "X",
        TextColor3 = OrionLib.Theme.Text,
        TextSize = 18,
        Font = Enum.Font.GothamBold,
        BackgroundColor3 = OrionLib.Theme.Tertiary,
        BorderSizePixel = 0,
        Position = UDim2.new(1, -45, 0.5, -15),
        Size = UDim2.new(0, 30, 0, 30),
        AnchorPoint = Vector2.new(1, 0.5)
    })
    
    Create("UICorner", {
        Parent = CloseButton,
        CornerRadius = UDim.new(0, 6)
    })
    
    -- Minimize Button
    local MinimizeButton = Create("TextButton", {
        Parent = TopBar,
        Text = "_",
        TextColor3 = OrionLib.Theme.Text,
        TextSize = 24,
        Font = Enum.Font.GothamBold,
        BackgroundColor3 = OrionLib.Theme.Tertiary,
        BorderSizePixel = 0,
        Position = UDim2.new(1, -85, 0.5, -15),
        Size = UDim2.new(0, 30, 0, 30),
        AnchorPoint = Vector2.new(1, 0.5)
    })
    
    Create("UICorner", {
        Parent = MinimizeButton,
        CornerRadius = UDim.new(0, 6)
    })
    
    -- Sidebar
    local Sidebar = Create("Frame", {
        Parent = MainWindow,
        BackgroundColor3 = OrionLib.Theme.Tertiary,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 0, 0, 40),
        Size = UDim2.new(0, 150, 1, -40)
    })
    
    -- Tab Holder
    local TabHolder = Create("Frame", {
        Parent = Sidebar,
        BackgroundTransparency = 1,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 10, 0, 10),
        Size = UDim2.new(1, -20, 1, -70)
    })
    
    local TabList = Create("UIListLayout", {
        Parent = TabHolder,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5)
    })
    
    -- Content Area
    local ContentArea = Create("Frame", {
        Parent = MainWindow,
        BackgroundTransparency = 1,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 155, 0, 45),
        Size = UDim2.new(1, -160, 1, -50)
    })
    
    local ContentList = Create("UIListLayout", {
        Parent = ContentArea,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 8)
    })
    
    -- User Info
    local UserFrame = Create("Frame", {
        Parent = Sidebar,
        BackgroundColor3 = OrionLib.Theme.Secondary,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 10, 1, -50),
        Size = UDim2.new(1, -20, 0, 40)
    })
    
    Create("UICorner", {
        Parent = UserFrame,
        CornerRadius = UDim.new(0, 6)
    })
    
    local Username = Create("TextLabel", {
        Parent = UserFrame,
        Text = Player.Name,
        TextColor3 = OrionLib.Theme.Text,
        TextSize = 12,
        Font = Enum.Font.Gotham,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 10, 0, 5),
        Size = UDim2.new(1, -10, 0, 15),
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    -- Drag Funktion
    local dragging
    local dragInput
    local dragStart
    local startPos
    
    local function Update(input)
        local delta = input.Position - dragStart
        MainWindow.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
    
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainWindow.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    TopBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            Update(input)
        end
    end)
    
    -- Button Events
    local minimized = false
    MinimizeButton.MouseButton1Click:Connect(function()
        minimized = not minimized
        if minimized then
            MainWindow.Size = UDim2.new(0, 600, 0, 40)
        else
            MainWindow.Size = UDim2.new(0, 600, 0, 400)
        end
    end)
    
    CloseButton.MouseButton1Click:Connect(function()
        MainWindow.Visible = false
    end)
    
    -- Tab System
    local Tabs = {}
    local CurrentTab = nil
    
    local function CreateTab(tabName)
        local TabButton = Create("TextButton", {
            Parent = TabHolder,
            Text = "",
            BackgroundColor3 = OrionLib.Theme.Secondary,
            BorderSizePixel = 0,
            Size = UDim2.new(1, 0, 0, 35),
            AutoButtonColor = false
        })
        
        Create("UICorner", {
            Parent = TabButton,
            CornerRadius = UDim.new(0, 6)
        })
        
        local TabText = Create("TextLabel", {
            Parent = TabButton,
            Text = tabName,
            TextColor3 = OrionLib.Theme.TextSecondary,
            TextSize = 14,
            Font = Enum.Font.GothamSemibold,
            BackgroundTransparency = 1,
            Size = UDim2.new(1, 0, 1, 0),
            Position = UDim2.new(0, 0, 0, 0),
            TextXAlignment = Enum.TextXAlignment.Center
        })
        
        local TabContent = Create("Frame", {
            Parent = ContentArea,
            BackgroundTransparency = 1,
            Size = UDim2.new(1, 0, 0, 0),
            Visible = false,
            AutomaticSize = Enum.AutomaticSize.Y
        })
        
        local ContentListLayout = Create("UIListLayout", {
            Parent = TabContent,
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 8)
        })
        
        -- Click Event
        TabButton.MouseButton1Click:Connect(function()
            -- Deaktiviere vorherigen Tab
            if CurrentTab then
                CurrentTab.Button.BackgroundColor3 = OrionLib.Theme.Secondary
                CurrentTab.Text.TextColor3 = OrionLib.Theme.TextSecondary
                CurrentTab.Content.Visible = false
            end
            
            -- Aktiviere neuen Tab
            CurrentTab = Tabs[tabName]
            TabButton.BackgroundColor3 = OrionLib.Theme.Accent
            TabText.TextColor3 = Color3.fromRGB(255, 255, 255)
            TabContent.Visible = true
        end)
        
        -- Speichere Tab
        Tabs[tabName] = {
            Button = TabButton,
            Content = TabContent,
            Text = TabText
        }
        
        -- Erster Tab wird aktiviert
        if not CurrentTab then
            CurrentTab = Tabs[tabName]
            TabButton.BackgroundColor3 = OrionLib.Theme.Accent
            TabText.TextColor3 = Color3.fromRGB(255, 255, 255)
            TabContent.Visible = true
        end
        
        -- Tab Funktionen
        local TabFunctions = {}
        
        function TabFunctions:AddButton(btnConfig)
            btnConfig = btnConfig or {}
            btnConfig.Name = btnConfig.Name or "Button"
            btnConfig.Callback = btnConfig.Callback or function() end
            
            local Button = Create("TextButton", {
                Parent = TabContent,
                Text = "",
                BackgroundColor3 = OrionLib.Theme.Tertiary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 35),
                AutoButtonColor = false
            })
            
            Create("UICorner", {
                Parent = Button,
                CornerRadius = UDim.new(0, 6)
            })
            
            local ButtonText = Create("TextLabel", {
                Parent = Button,
                Text = btnConfig.Name,
                TextColor3 = OrionLib.Theme.Text,
                TextSize = 14,
                Font = Enum.Font.GothamSemibold,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 1, 0),
                Position = UDim2.new(0, 0, 0, 0),
                TextXAlignment = Enum.TextXAlignment.Center
            })
            
            -- Click Event
            Button.MouseButton1Click:Connect(function()
                btnConfig.Callback()
            end)
            
            local ButtonFunctions = {}
            
            function ButtonFunctions:Set(newText)
                ButtonText.Text = newText
            end
            
            return ButtonFunctions
        end
        
        function TabFunctions:AddToggle(toggleConfig)
            toggleConfig = toggleConfig or {}
            toggleConfig.Name = toggleConfig.Name or "Toggle"
            toggleConfig.Default = toggleConfig.Default or false
            toggleConfig.Callback = toggleConfig.Callback or function() end
            toggleConfig.Flag = toggleConfig.Flag or nil
            
            local Toggle = {Value = toggleConfig.Default}
            
            local ToggleFrame = Create("TextButton", {
                Parent = TabContent,
                Text = "",
                BackgroundColor3 = OrionLib.Theme.Tertiary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 35),
                AutoButtonColor = false
            })
            
            Create("UICorner", {
                Parent = ToggleFrame,
                CornerRadius = UDim.new(0, 6)
            })
            
            local ToggleText = Create("TextLabel", {
                Parent = ToggleFrame,
                Text = toggleConfig.Name,
                TextColor3 = OrionLib.Theme.Text,
                TextSize = 14,
                Font = Enum.Font.GothamSemibold,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(0.7, -10, 1, 0),
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local ToggleIndicator = Create("Frame", {
                Parent = ToggleFrame,
                BackgroundColor3 = Toggle.Value and OrionLib.Theme.Accent or OrionLib.Theme.Border,
                BorderSizePixel = 0,
                Position = UDim2.new(1, -45, 0.5, -10),
                Size = UDim2.new(0, 40, 0, 20),
                AnchorPoint = Vector2.new(1, 0.5)
            })
            
            Create("UICorner", {
                Parent = ToggleIndicator,
                CornerRadius = UDim.new(0, 6)
            })
            
            local ToggleDot = Create("Frame", {
                Parent = ToggleIndicator,
                BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                BorderSizePixel = 0,
                Position = Toggle.Value and UDim2.new(1, -3, 0.5, 0) or UDim2.new(0, 3, 0.5, 0),
                Size = UDim2.new(0, 14, 0, 14),
                AnchorPoint = Vector2.new(0.5, 0.5)
            })
            
            Create("UICorner", {
                Parent = ToggleDot,
                CornerRadius = UDim.new(0, 6)
            })
            
            function Toggle:Set(value)
                self.Value = value
                ToggleIndicator.BackgroundColor3 = value and OrionLib.Theme.Accent or OrionLib.Theme.Border
                ToggleDot.Position = value and UDim2.new(1, -3, 0.5, 0) or UDim2.new(0, 3, 0.5, 0)
                toggleConfig.Callback(value)
            end
            
            -- Click Event
            ToggleFrame.MouseButton1Click:Connect(function()
                Toggle:Set(not Toggle.Value)
            end)
            
            -- Set initial value
            Toggle:Set(Toggle.Value)
            
            -- Save to flags
            if toggleConfig.Flag then
                OrionLib.Flags[toggleConfig.Flag] = Toggle
            end
            
            return Toggle
        end
        
        function TabFunctions:AddSlider(sliderConfig)
            sliderConfig = sliderConfig or {}
            sliderConfig.Name = sliderConfig.Name or "Slider"
            sliderConfig.Min = sliderConfig.Min or 0
            sliderConfig.Max = sliderConfig.Max or 100
            sliderConfig.Default = sliderConfig.Default or 50
            sliderConfig.Callback = sliderConfig.Callback or function() end
            sliderConfig.Flag = sliderConfig.Flag or nil
            
            local Slider = {Value = sliderConfig.Default}
            local dragging = false
            
            local SliderFrame = Create("Frame", {
                Parent = TabContent,
                BackgroundColor3 = OrionLib.Theme.Tertiary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 60)
            })
            
            Create("UICorner", {
                Parent = SliderFrame,
                CornerRadius = UDim.new(0, 6)
            })
            
            local SliderText = Create("TextLabel", {
                Parent = SliderFrame,
                Text = sliderConfig.Name,
                TextColor3 = OrionLib.Theme.Text,
                TextSize = 14,
                Font = Enum.Font.GothamSemibold,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 5),
                Size = UDim2.new(1, -20, 0, 20),
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local ValueText = Create("TextLabel", {
                Parent = SliderFrame,
                Text = tostring(Slider.Value),
                TextColor3 = OrionLib.Theme.Accent,
                TextSize = 14,
                Font = Enum.Font.GothamBold,
                BackgroundTransparency = 1,
                Position = UDim2.new(1, -60, 0, 5),
                Size = UDim2.new(0, 50, 0, 20),
                TextXAlignment = Enum.TextXAlignment.Right
            })
            
            local SliderTrack = Create("Frame", {
                Parent = SliderFrame,
                BackgroundColor3 = OrionLib.Theme.Border,
                BorderSizePixel = 0,
                Position = UDim2.new(0, 10, 0, 35),
                Size = UDim2.new(1, -20, 0, 6)
            })
            
            Create("UICorner", {
                Parent = SliderTrack,
                CornerRadius = UDim.new(1, 0)
            })
            
            local SliderFill = Create("Frame", {
                Parent = SliderTrack,
                BackgroundColor3 = OrionLib.Theme.Accent,
                BorderSizePixel = 0,
                Size = UDim2.new((Slider.Value - sliderConfig.Min) / (sliderConfig.Max - sliderConfig.Min), 0, 1, 0)
            })
            
            Create("UICorner", {
                Parent = SliderFill,
                CornerRadius = UDim.new(1, 0)
            })
            
            local SliderButton = Create("TextButton", {
                Parent = SliderTrack,
                Text = "",
                BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                BorderSizePixel = 0,
                Position = UDim2.new((Slider.Value - sliderConfig.Min) / (sliderConfig.Max - sliderConfig.Min), -8, 0.5, 0),
                Size = UDim2.new(0, 16, 0, 16),
                AnchorPoint = Vector2.new(0.5, 0.5),
                AutoButtonColor = false
            })
            
            Create("UICorner", {
                Parent = SliderButton,
                CornerRadius = UDim.new(1, 0)
            })
            
            function Slider:Set(value)
                value = math.clamp(value, sliderConfig.Min, sliderConfig.Max)
                self.Value = value
                
                local percent = (value - sliderConfig.Min) / (sliderConfig.Max - sliderConfig.Min)
                
                SliderFill.Size = UDim2.new(percent, 0, 1, 0)
                SliderButton.Position = UDim2.new(percent, -8, 0.5, 0)
                ValueText.Text = tostring(math.floor(value))
                sliderConfig.Callback(value)
            end
            
            -- Drag Functionality
            local function updateSlider(input)
                local percent = math.clamp((input.Position.X - SliderTrack.AbsolutePosition.X) / SliderTrack.AbsoluteSize.X, 0, 1)
                local value = sliderConfig.Min + (sliderConfig.Max - sliderConfig.Min) * percent
                
                Slider:Set(value)
            end
            
            SliderButton.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                end
            end)
            
            SliderButton.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end)
            
            UserInputService.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    updateSlider(input)
                end
            end)
            
            SliderTrack.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    updateSlider(input)
                    dragging = true
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end)
            
            -- Initial set
            Slider:Set(Slider.Value)
            
            -- Save to flags
            if sliderConfig.Flag then
                OrionLib.Flags[sliderConfig.Flag] = Slider
            end
            
            return Slider
        end
        
        function TabFunctions:AddLabel(labelConfig)
            labelConfig = labelConfig or {}
            labelConfig.Text = labelConfig.Text or "Label"
            
            local Label = Create("TextLabel", {
                Parent = TabContent,
                Text = labelConfig.Text,
                TextColor3 = OrionLib.Theme.Text,
                TextSize = 14,
                Font = Enum.Font.Gotham,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 0, 25),
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local LabelFunctions = {}
            
            function LabelFunctions:Set(newText)
                Label.Text = newText
            end
            
            return LabelFunctions
        end
        
        function TabFunctions:AddDropdown(dropdownConfig)
            dropdownConfig = dropdownConfig or {}
            dropdownConfig.Name = dropdownConfig.Name or "Dropdown"
            dropdownConfig.Options = dropdownConfig.Options or {"Option 1", "Option 2"}
            dropdownConfig.Default = dropdownConfig.Default or dropdownConfig.Options[1]
            dropdownConfig.Callback = dropdownConfig.Callback or function() end
            dropdownConfig.Flag = dropdownConfig.Flag or nil
            
            local Dropdown = {
                Value = dropdownConfig.Default,
                Options = dropdownConfig.Options,
                Opened = false
            }
            
            local DropdownFrame = Create("Frame", {
                Parent = TabContent,
                BackgroundColor3 = OrionLib.Theme.Tertiary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 35),
                ClipsDescendants = true
            })
            
            Create("UICorner", {
                Parent = DropdownFrame,
                CornerRadius = UDim.new(0, 6)
            })
            
            local DropdownButton = Create("TextButton", {
                Parent = DropdownFrame,
                Text = "",
                BackgroundTransparency = 1,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 35),
                AutoButtonColor = false
            })
            
            local DropdownText = Create("TextLabel", {
                Parent = DropdownButton,
                Text = dropdownConfig.Name,
                TextColor3 = OrionLib.Theme.Text,
                TextSize = 14,
                Font = Enum.Font.GothamSemibold,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(0.7, -10, 1, 0),
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local SelectedText = Create("TextLabel", {
                Parent = DropdownButton,
                Text = Dropdown.Value,
                TextColor3 = OrionLib.Theme.Accent,
                TextSize = 13,
                Font = Enum.Font.GothamBold,
                BackgroundTransparency = 1,
                Position = UDim2.new(0.7, 0, 0, 0),
                Size = UDim2.new(0.3, -30, 1, 0),
                TextXAlignment = Enum.TextXAlignment.Right
            })
            
            local Arrow = Create("TextLabel", {
                Parent = DropdownButton,
                Text = "▼",
                TextColor3 = OrionLib.Theme.Accent,
                TextSize = 12,
                Font = Enum.Font.GothamBold,
                BackgroundTransparency = 1,
                Position = UDim2.new(1, -20, 0.5, -6),
                Size = UDim2.new(0, 16, 0, 12),
                AnchorPoint = Vector2.new(1, 0.5)
            })
            
            local OptionsFrame = Create("Frame", {
                Parent = DropdownFrame,
                BackgroundColor3 = OrionLib.Theme.Secondary,
                BorderSizePixel = 0,
                Position = UDim2.new(0, 5, 0, 40),
                Size = UDim2.new(1, -10, 0, 0),
                ClipsDescendants = true
            })
            
            Create("UICorner", {
                Parent = OptionsFrame,
                CornerRadius = UDim.new(0, 6)
            })
            
            local OptionsList = Create("Frame", {
                Parent = OptionsFrame,
                BackgroundTransparency = 1,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 1, 0)
            })
            
            local OptionsListLayout = Create("UIListLayout", {
                Parent = OptionsList,
                SortOrder = Enum.SortOrder.LayoutOrder,
                Padding = UDim.new(0, 2)
            })
            
            function Dropdown:Set(value)
                if table.find(dropdownConfig.Options, value) then
                    self.Value = value
                    SelectedText.Text = value
                    dropdownConfig.Callback(value)
                end
            end
            
            function Dropdown:Refresh(options)
                dropdownConfig.Options = options or dropdownConfig.Options
                self.Options = dropdownConfig.Options
                
                -- Clear old options
                for _, child in pairs(OptionsList:GetChildren()) do
                    if child:IsA("TextButton") then
                        child:Destroy()
                    end
                end
                
                -- Add new options
                for _, option in pairs(dropdownConfig.Options) do
                    local OptionButton = Create("TextButton", {
                        Parent = OptionsList,
                        Text = option,
                        TextColor3 = OrionLib.Theme.Text,
                        TextSize = 13,
                        Font = Enum.Font.Gotham,
                        BackgroundColor3 = OrionLib.Theme.Tertiary,
                        BorderSizePixel = 0,
                        Size = UDim2.new(1, 0, 0, 30),
                        AutoButtonColor = false
                    })
                    
                    Create("UICorner", {
                        Parent = OptionButton,
                        CornerRadius = UDim.new(0, 4)
                    })
                    
                    OptionButton.MouseButton1Click:Connect(function()
                        Dropdown:Set(option)
                        Dropdown:Toggle()
                    end)
                end
            end
            
            function Dropdown:Toggle()
                self.Opened = not self.Opened
                
                if self.Opened then
                    local totalHeight = math.min(#dropdownConfig.Options * 32 + 10, 150)
                    DropdownFrame.Size = UDim2.new(1, 0, 0, 35 + totalHeight + 5)
                    OptionsFrame.Size = UDim2.new(1, -10, 0, totalHeight)
                    Arrow.Text = "▲"
                else
                    DropdownFrame.Size = UDim2.new(1, 0, 0, 35)
                    OptionsFrame.Size = UDim2.new(1, -10, 0, 0)
                    Arrow.Text = "▼"
                end
            end
            
            -- Click Event
            DropdownButton.MouseButton1Click:Connect(function()
                Dropdown:Toggle()
            end)
            
            -- Initial setup
            Dropdown:Refresh(dropdownConfig.Options)
            Dropdown:Set(Dropdown.Value)
            
            -- Save to flags
            if dropdownConfig.Flag then
                OrionLib.Flags[dropdownConfig.Flag] = Dropdown
            end
            
            return Dropdown
        end
        
        function TabFunctions:AddTextbox(textboxConfig)
            textboxConfig = textboxConfig or {}
            textboxConfig.Name = textboxConfig.Name or "Textbox"
            textboxConfig.Placeholder = textboxConfig.Placeholder or "Enter text..."
            textboxConfig.Callback = textboxConfig.Callback or function() end
            
            local TextboxFrame = Create("Frame", {
                Parent = TabContent,
                BackgroundColor3 = OrionLib.Theme.Tertiary,
                BorderSizePixel = 0,
                Size = UDim2.new(1, 0, 0, 35)
            })
            
            Create("UICorner", {
                Parent = TextboxFrame,
                CornerRadius = UDim.new(0, 6)
            })
            
            local Textbox = Create("TextBox", {
                Parent = TextboxFrame,
                Text = "",
                PlaceholderText = textboxConfig.Placeholder,
                TextColor3 = OrionLib.Theme.Text,
                PlaceholderColor3 = OrionLib.Theme.TextSecondary,
                TextSize = 14,
                Font = Enum.Font.Gotham,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(1, -20, 1, 0),
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            Textbox.FocusLost:Connect(function(enterPressed)
                if enterPressed then
                    textboxConfig.Callback(Textbox.Text)
                end
            end)
        end
        
        return TabFunctions
    end
    
    -- Window Functions zurückgeben
    local WindowFunctions = {}
    
    function WindowFunctions:MakeTab(tabConfig)
        tabConfig = tabConfig or {}
        tabConfig.Name = tabConfig.Name or "Tab"
        return CreateTab(tabConfig.Name)
    end
    
    function WindowFunctions:Destroy()
        MainWindow:Destroy()
    end
    
    -- Notification beim Öffnen
    spawn(function()
        wait(0.5)
        OrionLib:MakeNotification({
            Name = config.Name,
            Content = "UI loaded successfully!",
            Time = 3
        })
    end)
    
    return WindowFunctions
end

-- Notification System
function OrionLib:MakeNotification(notificationConfig)
    notificationConfig = notificationConfig or {}
    notificationConfig.Name = notificationConfig.Name or "Notification"
    notificationConfig.Content = notificationConfig.Content or "Message"
    notificationConfig.Time = notificationConfig.Time or 5
    
    local Notification = Create("Frame", {
        Parent = Orion,
        BackgroundColor3 = OrionLib.Theme.Secondary,
        BorderSizePixel = 0,
        Position = UDim2.new(1, 10, 1, -50),
        Size = UDim2.new(0, 300, 0, 0),
        AnchorPoint = Vector2.new(1, 1)
    })
    
    Create("UICorner", {
        Parent = Notification,
        CornerRadius = UDim.new(0, 8)
    })
    
    Create("UIStroke", {
        Parent = Notification,
        Color = OrionLib.Theme.Accent,
        Thickness = 1
    })
    
    local Title = Create("TextLabel", {
        Parent = Notification,
        Text = notificationConfig.Name,
        TextColor3 = OrionLib.Theme.Accent,
        TextSize = 16,
        Font = Enum.Font.GothamBold,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 15, 0, 10),
        Size = UDim2.new(1, -30, 0, 20),
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    local Content = Create("TextLabel", {
        Parent = Notification,
        Text = notificationConfig.Content,
        TextColor3 = OrionLib.Theme.Text,
        TextSize = 14,
        Font = Enum.Font.Gotham,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 15, 0, 35),
        Size = UDim2.new(1, -30, 0, 50),
        TextXAlignment = Enum.TextXAlignment.Left,
        TextWrapped = true
    })
    
    -- Animate in
    Notification.Size = UDim2.new(0, 300, 0, 100)
    Notification.Position = UDim2.new(1, -10, 1, -110)
    
    -- Wait and destroy
    wait(notificationConfig.Time)
    Notification:Destroy()
end

-- Init function
function OrionLib:Init()
    -- Nothing needed here
end

-- Destroy function
function OrionLib:Destroy()
    Orion:Destroy()
end

return OrionLib
